{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
      "array-bracket-spacing": "error",
      "comma-dangle": "error",
      "prettier/prettier": ["error", {
       "endOfLine":"auto"
     }],
     "no-unused-vars": "off",
     "camelcase": "off"
    },

    "settings": {
      "import/resolver": {}
    }
}
